{
    "name": "Author",
    "properties": [
        {
            "name": "firstName",
            "asserts": [
                {
                    "assert": "Regex",
                    "pattern": "/\\d/",
                    "match": false,
                    "message": "Your name cannot contain a number"
                }
            ]
        },
        {
            "name": "name",
            "asserts": [
                {
                    "assert": "Regex",
                    "pattern": "/^[a-z]+$/i",
                    "htmlPattern": "^[a-zA-Z]+$"
                }
            ]
        }
    ]
}
