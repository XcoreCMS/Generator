{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "PHP Property",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "visibility": {
            "enum": ["private", "protected", "public"]
        },
        "description": {
            "type": "string"
        },
        "nullable": {
            "type": "boolean",
            "default": true
        },
        "type": {
            "anyOf": [
                {
                    "type": "string"
                },
                {
                    "enum": [
                        "string", "int", "float", "bool", "resource", "array",
                        "?string", "?int", "?float", "?bool", "?resource", "?array"
                    ]
                }
            ]
        }
    },
    "required": ["name"]
}
